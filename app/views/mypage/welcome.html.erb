<% content_for :stylesheet do -%>
  <style type="text/css">
  p.welcome {
    line-height: 1.3em;
    background-color: #fdfdf5;
    border-right: 1px dashed silver;
    border-bottom: 1px dashed silver;
  }
  ul.welcome {
    margin: 10px 0 5px 15px;
    list-style-type: none;
  }
  ul.welcome li {
    margin-bottom: 3px;
  }
  </style>
<% end -%>

<% content_for :contents_left do -%>
  <%= render(:partial => 'user/portrait_box', :locals => { :current_user_info => @current_user_info }) %>
  <%= render :partial => 'antenna_box', :locals => { :system_antennas => @system_antennas, :my_antennas => @my_antennas } %>
<% end -%>

<% content_for :contents_right do -%>
  <div style="background-color: #fff0ff; padding: 5px; border: 1px dashed pink; margin-bottom: 10px;">
    <h3>【<%= h Admin::Setting.abbr_app_title -%>】へようこそ！</h3>
  </div>

  <div style="border: 1px dashed pink; padding: 5px; margin-bottom: 10px;">
    <h3 style="color: blue; background-color: #f0f0ff; padding: 3px; border-left: 10px solid skyblue; border-bottom: 1px dashed skyblue;">ユーザ登録が完了しました</h3>
    <div style="margin-left: 15px; margin-top: 5px;">
      <p class="welcome">あなたのユーザ情報の登録が完了しました。<br/>まずは色々と触ってみましょう。</p>
      <h4 style="margin-top: 5px; border-left: 10px solid skyblue; border-bottom: 1px dashed skyblue; padding: 3px;">あなたの情報</h4>
      <ul class="welcome">
        <li><%= icon_tag 'house' -%>あなたのための情報が集まるマイページはこちら ... <%= link_to '[マイページ]', :action => 'index' %></li>
        <li><%= icon_tag 'vcard' -%>他の方から見たあなたのプロフィールはこちら ... <%= link_to '[プロフィール]', :action => 'profile' %></li>
        <li><%= icon_tag 'wrench' -%>登録したプロフィール情報の修正はこちら ... <%= link_to '[プロフィール変更]', :action => 'manage' %></li>
        <li><%= icon_tag 'picture' -%>プロフィール画像の変更はこちら ... <%= link_to '[プロフィール画像変更]', :action => 'manage', :menu => 'manage_portrait' %></li>
      </ul>
      <h4 style="margin-top: 5px; border-left: 10px solid skyblue; border-bottom: 1px dashed skyblue; padding: 3px;">みんなの情報</h4>
      <ul class="welcome">
        <li><%= icon_tag 'folder_star' -%>最近の人気のブログ記事を読んで見ましょう！ ... <%= link_to('[最近の人気記事]', :controller => 'mypage', :action => "entries", :list_type => "access_blogs") -%></li>
        <li><%= icon_tag 'folder_page' -%>まずは既に投稿されたブログを読んでみましょう！ ... <%= link_to('[最新のブログ]', :controller => 'mypage', :action => "entries", :list_type => "recent_blogs") -%></li>
        <li><%= icon_tag 'user' -%>知っている人が既にいないか探してみましょう！ ... <%= link_to '[ユーザを探す]', :controller => 'users' %></li>
        <li><%= icon_tag 'group' -%>入ってみたいグループが無いか探してみましょう！ ... <%= link_to '[グループを探す]', :controller => 'groups' %></li>
      </ul>
      <h4 style="margin-top: 5px; border-left: 10px solid skyblue; border-bottom: 1px dashed skyblue; padding: 3px;">サイトの情報</h4>
      <ul class="welcome">
        <% help_url = h(Admin::Setting.help_url) -%>
        <% unless help_url.blank? -%>
        <li><%= icon_tag 'help' -%>詳しい使い方はこちらをご覧ください ... <a href="<%= help_url -%>" target="_blank">[ヘルプ]</a></li>
        <% end -%>
        <li><%= icon_tag 'tick' -%>次回からのアクセスは、<%= link_to root_url, root_url -%>より利用可能です。</li>
      </ul>
    </div>
  </div>

  <div style="border: 1px dashed pink; padding: 5px; margin-bottom: 10px;">
    <div id="introduction"></div>
  </div>
<% end -%>

<% content_for :javascript do -%>
<script type="text/javascript">
$j(function(){
    $j('#introduction').load(relative_url_root + "/custom/about_this_site.html");
});
</script>
<% end -%>
