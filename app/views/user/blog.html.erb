<% content_for :contents_left do -%>
  <%= render(:partial => 'user/portrait_box', :locals => { :user => @user }) -%>
  <%= render(:partial => 'entries/search_box') -%>
  <%= render(:partial => 'entries/recent_box', :locals => { :recent_entries => @recent_entries }) -%>
  <%= render(:partial => 'entries/archive_box', :locals => { :month_archives => @month_archives }) -%>
  <%= render(:partial => 'entries/categories_box', :locals => { :categories => @categories }) -%>
  <%= render(:partial => 'share_file/file_size_box', :locals => { :owner_symbol => @user.symbol }) %>
<% end -%>

<% content_for :contents_right do -%>
  <% if @entry -%>
    <%= render(:partial => 'entries/entry_detail',
               :locals => {
                 :entry => @entry,
                 :prev_entry => @prev_entry,
                 :next_entry => @next_entry,
                 :tb_entries => @tb_entries,
                 :to_tb_entries => @to_tb_entries,
                 :editable => @editable,
                 :entry_accesses => @entry_accesses,
                 :total_count => @total_count,
                 :bookmark_comments_count => @bookmark_comments_count }) %>
  <% else -%>
    <%= render(:partial => 'entries/entries_list',
               :locals => { :pages => @pages, :entries => @entries, :year => @year, :month => @month }) -%>
  <% end -%>
<% end -%>
