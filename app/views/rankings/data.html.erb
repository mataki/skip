<% unless @rankings.empty? -%>
<table class="ranking_square">
  <thead>
    <tr><th class="title" colspan="4"><%= icon_tag('star') %><%= ranking_title params[:content_type].to_sym %></th></tr>
    <tr><td colspan="4"><%= ranking_caption params[:content_type].to_sym -%></td></tr>
    <tr>
      <th></th>
    <% if show_title_col? params[:content_type].to_sym -%>
      <th>タイトル</th>
    <% end -%>
      <th>ユーザ</th>
      <th class="point"><%= ranking_amount_name params[:content_type].to_sym %></th>
    </tr>
  </thead>
  <tbody>
<% @rankings.each_with_index do |ranking, i| -%>
    <tr>
      <td class="rank"><%= i + 1 %>
    <% if show_title_col? params[:content_type].to_sym -%>
       <td class="link_text"><%= link_to h(ranking.title), h(ranking.url) %></td>
    <% end -%>
      <td class="user_name"><%= link_to h(ranking.author), h(ranking.author_url) %></td>
      <td class="point"><%= h ranking.amount %></td>
    </tr>
<% end -%>
  </tbody>
</table>
<% end -%>

